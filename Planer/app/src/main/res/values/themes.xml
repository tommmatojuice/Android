<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/back_white</item>
        <item name="android:textColor">@color/text</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/elements_white</item>
        <item name="colorOnPrimary">@color/elements_white</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:colorPrimary">@color/elements_white</item>
    </style>

    <style name="RoundedCornerButton">
        <item name="android:radius">15dp</item>
        <item name="color">@color/green</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/h3_text</item>
        <item name="android:paddingStart">25dp</item>
    </style>
</resources>