<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/wakeup_time"
                    android:textSize="@dimen/h1_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wakeup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_weight="10"
                        android:text="@string/_00_00"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/wakeup_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <!--            Время отхода ко сну-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/bed_time"
                    android:textSize="@dimen/h1_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bad_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_weight="10"
                        android:text="@string/_00_00"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/bad_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <!--            Время завтрака-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/breakfast_time"
                    android:textSize="@dimen/h1_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/begin"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <TextView
                        android:id="@+id/breakfast_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/_00_00"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/breakfast_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/end"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <TextView
                        android:id="@+id/breakfast_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/_00_00"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/breakfast_end_buttom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <!--            Время обеда-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/lunch_time"
                    android:textSize="@dimen/h1_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/begin"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <TextView
                        android:id="@+id/lunch_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/_00_00"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/lunch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/end"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <TextView
                        android:id="@+id/lunch_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginStart="12dp"
                        android:text="@string/_00_00"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/lunch_end_buttom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <!--            Время ужина-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/diner_time"
                    android:textSize="@dimen/h1_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/begin"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <TextView
                        android:id="@+id/diner_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/_00_00"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/diner_buttom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/end"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <TextView
                        android:id="@+id/diner_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/_00_00"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/text"
                        android:textSize="@dimen/h2_text" />

                    <Button
                        android:id="@+id/diner_end_buttom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="90dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2_5"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/next2_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0"/>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

</FrameLayout>